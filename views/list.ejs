<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="CSS/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap" rel="stylesheet">
</head>

<body>

  <div class="box" id="heading">

    <h1> things to do : <%= day %></h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(listItem){ %>
      <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="cbox" value="<%= listItem._id %>" onChange="this.form.submit()">
        <p> <%= listItem.name %> </p>
      </div>
          </form>
    <% }); %>


  <form class="item" action="/" method="post">
    <input type="text" name="newItem" value="" placeholder="add things to do" autocomplete="off">
    <button type="submit" name="button" style="font-family: 'Amatic SC';">>></button>
  </form>
  </div>
</body>

</html>
